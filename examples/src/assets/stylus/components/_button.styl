@import '../_vars.styl';

.w-button {
  display: inline-block;
  position: relative;
  font-weight: 400;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  user-select: none;
  touch-action: manipulation;
  border: 1px solid transparent;
  padding: 0 15px;
  font-size: 14px;
  line-height: 1.5;
  height: 32px;
  border-radius: 4px;
  cursor: pointer;
  transition: transform ease-in 0.1s, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;

  &:not(:disabled):active {
    transform: scale(0.95);
  }

  for theme in $themes {
    &.w-button-{theme} {
      color: theme == 'light' ? #888 : #fff;
      background: $themes[theme];
      border-color: $themes[theme];
      border-style: solid;

      &:active, &:hover {
        background: darken($themes[theme], 10%);
        border-color: darken($themes[theme], 10%);
      }
    }

    &.w-button--outline-{theme} {
      color: $themes[theme];
      background-color: transparent;
      background-image: none;
      border-color: $themes[theme];

      &:active, &:hover {
        color: #fff;
        background-color: $themes[theme];
        border-color: $themes[theme];
      }
    }
  }
}
