{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@w-design/*": ["packages/*"],
      "Hooks": ["src/hooks"],
      "Utils": ["src/utils"]
    }
  },
  "include": ["src", "typings", "../w-utils/src/mocks", "../w-utils/src/utils/installer.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
