{
    "name": "w-design-chat",
    "version": "0.0.1",
    "private": false,
    "description": "A Vue 3 UI Library like Ant Design Vue",
    "license": "MIT",
    "type": "module",
    "main": "lib/index.js",
    "module": "es/index.mjs",
    "types": "es/index.d.ts",
    "exports": {
        ".": {
            "types": "./es/index.d.ts",
            "import": "./es/index.mjs",
            "require": "./lib/index.js"
        },
        "./package.json": "./package.json",
        "./style.css": "./dist/index.css",
        "./dist/style.css": "./dist/index.css",
        "./es/*": "./es/*",
        "./lib/*": "./lib/*",
        "./resolver": {
            "import": "./es/resolver/index.js",
            "require": "./lib/resolver/index.js"
        }
    },
    "files": [
        "dist",
        "es",
        "lib"
    ],
    "typesVersions": {
        "*": {
            "*": [
                "./dist/*",
                "./es/*",
                "./lib/*",
                "./*"
            ]
        }
    },
    "scripts": {
        "clean": "rm -rf dist es lib",
        "build": "vite build",
        "build:umd": "vite build -c vite.config.umd.ts",
        "build:es-browser": "vite build -c vite.config.esm-browser.ts",
        "build:es": "vite build -c vite.config.es.ts",
        "build:lib": "vite build -c vite.config.lib.ts",
        "build:lite": "pnpm clean && pnpm build && pnpm build:es-browser",
        "build:all": "pnpm run clean && pnpm run build:umd && pnpm run build:es-browser && pnpm run build:es && pnpm run build:lib"
    },
    "peerDependencies": {
        "vue": "^3.2.0"
    },
    "devDependencies": {
        "unplugin-icons": "^22.5.0"
    }
}
