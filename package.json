{
    "name": "w-design",
    "version": "1.0.0",
    "private": true,
    "description": "Monorepo for w-design-vue and Docs",
    "type": "module",
    "packageManager": "pnpm@10.12.1",
    "workspaces": [
        "packages/*",
        "examples/*",
        "apps/*",
        "play"
    ],
    "scripts": {
        "dev": "pnpm -F w-design-docs dev",
        "build:design-vue": "pnpm -F w-design-vue build",
        "build:package": "pnpm -F w-design-vue build:package",
        "web:dev": "pnpm -F examples dev",
        "icons:build": "pnpm -F icons build",
        "use:build": "pnpm -F use build",
        "play:dev": "pnpm -C play/vite dev",
        "docs:dev": "pnpm -F w-design-docs dev",
        "docs:build": "pnpm -F w-design-docs build",
        "docs:preview": "pnpm -F w-design-docs preview",
        "build": "pnpm -F '@w-design/*' run build",
        "test": "pnpm -F '@w-design/*' run test",
        "lint": "pnpm -F '@w-design/*' run lint",
        "clean": "rimraf 'packages/*/{dist,node_modules}' && rimraf node_modules",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "pnpm build && pnpm changeset publish",
        "postinstall": "npx simple-git-hooks"
    },
    "peerDependencies": {
        "vue": "^3.2.0"
    },
    "dependencies": {
        "@w-design/components": "workspace:^",
        "@w-design/eslint-config": "workspace:^",
        "@w-design/icons": "workspace:^",
        "@w-design/use": "workspace:^",
        "@w-design/utils": "workspace:^",
        "w-design-vue": "workspace:^",
        "@w-design/design-demo": "workspace:*"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-replace": "^6.0.2",
        "@vitejs/plugin-vue": "^5.2.4",
        "esbuild": "^0.25.5",
        "eslint": "^9.29.0",
        "fast-glob": "^3.3.3",
        "fs-extra": "^11.3.0",
        "lint-staged": "^15.5.2",
        "markdown-it": "^14.1.0",
        "pnpm": "^10.12.1",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "rollup": "^4.43.0",
        "rollup-plugin-dts": "^6.2.1",
        "simple-git": "^3.28.0",
        "simple-git-hooks": "^2.13.0",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-inspect": "^11.1.0",
        "vitepress": "1.6.3",
        "vitest": "^3.2.3",
        "vue": "^3.5.16"
    },
    "engines": {
        "node": "^14.18.0 || >=16.x",
        "pnpm": "^7.13.0 || >=8.x"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "vite"
            ]
        }
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx,md,json}": [
            "prettier --write"
        ]
    }
}
