{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "baseUrl": ".",
        "types": [],
        "paths": {
            "@w-design/components": ["packages/components"],
            "@w-design/components/*": ["packages/components/*"],
            "@w-design/utils": ["packages/utils"],
            "@w-design/utils/*": ["packages/utils/*"],
            "@w-design/use": ["packages/use"],
            "@w-design/use/*": ["packages/use/*"],
            "w-design-vue": ["packages/design-vue"]
        }
    },
    "preserveSymlinks": true
}
